:root {
  --base-font-family: "Montserrat", -apple-system, BlinkMacSystemFont,
    "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji",
    "Segoe UI Emoji", "Segoe UI Symbol";
  --base-font-size: 1em;
  --base-font-weight: normal;
  --small-font-size: calc(var(--base-font-size) * 0.9);
  --base-line-height: 1.25;

  --heading-font-family: "SecularOne";
  --heading-font-weight: normal;

  --spacing-unit: 30px;

  --text-color: #0c1e0c;

  --background-color: #f3f3f5;

  --brand-color: #4470a8;

  --secondary-color: #4470a8;

  --grey-color: grey(50);
  --grey-color-light: grey(60);
  --grey-color-dark: grey(45);

  --table-text-align: left;

  /*Width of the content area*/
  --content-width: 1000px;

  --on-palm: 600px;
  --on-laptop: 1000px;

  box-sizing: border-box;
  scroll-behavior: smooth;
}

@custom-media --on-palm (max-width: 700px);

.brand-filled {
  fill: var(--brand-color);
}

.grey1-filled {
  fill: var(--grey-color);
}

